			{{ui-number-input min=1 max=10 bs=false}}
		</div>
		<div class="col-xs-8">
			min and max set [1,10]<br/>
			<code>
\{{ui-number-input min=1 max=10 bs=false bs=false4}}
			</code>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-4">
			{{ui-number-input min=0 max=100 step=5 bs=false}}
		</div>
		<div class="col-xs-8">
			min, max, step set [0,100,5]<br/>
			<code>
\{{ui-number-input min=1 max=10 step=5 bs=false}}
			</code>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-4">
			{{ui-number-input placeholder="add number" bs=false}}
		</div>
		<div class="col-xs-8">
			placeholder text<br/>
			<code>
\{{ui-number-input placeholder="add number" bs=false}}
			</code>
		</div>
	</div>
</div>
	
	
